{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}



{% block content %}


    <div class="page-header">
        <h2><i class="fas fa-box fa-fw"></i>Admins</h2>
        <div class="controls-container">
            <a href="#" class="mb-2">Sukurti naują</a>
        </div>
    </div>


    <table class="table">
        <thead >
        <tr>
            <th>Id</th>
            <th>Username</th>
        </tr>
        </thead>
        <tbody>
        {% for admin in pagination %}
            <tr>
                <td>{{ admin.baseUser.id }}</td>
                <td>{{ admin.baseUser.username }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Nerasta duomenų</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="display:flex;justify-content:center;align-items:center;">
        <div>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>


{% endblock %}

