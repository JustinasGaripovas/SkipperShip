        //         L.latLng(54.897581, 23.909724),
        //         L.latLng(54.897581, 23.919724)
        //     ],
        //     createMarker: () => marker,
        //     routeWhileDragging: true
        // }).addTo(map);

    </script>
{% endblock %}

