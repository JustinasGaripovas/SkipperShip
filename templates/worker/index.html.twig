{% extends 'base.html.twig' %}

{% block title %}Worker index{% endblock %}



{% block content %}


    <div class="page-header">
        <h2><i class="fas fa-box fa-fw"></i>Workers</h2>
        <div class="controls-container">
            <a href="{{ path('warehouse_worker_registration') }}" class="mb-2">Create new</a>
        </div>
    </div>


    <table class="table">
        <thead >
        <tr>
            <th>Id</th>
            <th>Username</th>
        </tr>
        </thead>
        <tbody>
        {% for admin in pagination %}
            <tr>
                <td>{{ admin.baseUser.id }}</td>
                <td>{{ admin.baseUser.username }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Nerasta duomen≈≥</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="display:flex;justify-content:center;align-items:center;">
        <div>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>


{% endblock %}

