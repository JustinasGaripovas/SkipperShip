{% extends 'base.html.twig' %}

{% block title %}Courier index{% endblock %}

{% block content %}

    <div class="page-header">
        <h2><i class="fas fa-box fa-fw"></i>Couriers</h2>
        <div class="controls-container">
            <a href="#" class="mb-2">Sukurti naują</a>
        </div>
    </div>


    <table class="table">
        <thead >
        <tr>
            <th>Id</th>
            <th>Username</th>
        </tr>
        </thead>
        <tbody>
        {% for courier in pagination %}
            <tr>
                <td>{{ courier.baseUser.id }}</td>
                <td>{{ courier.baseUser.username }}</td>
                <td><a href="{{ path('courier_delivery_index', {'id': courier.id}) }}">delivery's</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Nerasta duomenų</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="display:flex;justify-content:center;align-items:center;">
        <div>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>


{% endblock %}

