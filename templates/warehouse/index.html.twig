{% extends 'base.html.twig' %}

{% block title %}Warehouse index{% endblock %}

{% block content %}

    <div class="page-header">
        <h2><i class="fas fa-warehouse fa-fw"></i>Warehouses</h2>
        <div class="controls-container">
            <a href="{{ path('warehouse_new') }}" class="mb-2">Create new</a>
        </div>
    </div>


    <table class="table">
        <thead >
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>PostCode</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for warehouse in warehouses %}
            <tr>
                <td>{{ warehouse.id }}</td>
                <td>{{ warehouse.name }}</td>
                <td>{{ warehouse.postCode }}</td>
                <td>
                    <a href="{{ path('warehouse_delivery_index', {'id': warehouse.id}) }}">deliveries</a>
                    <a href="{{ path('warehouse_show', {'id': warehouse.id}) }}">show</a>
                    <a href="{{ path('warehouse_edit', {'id': warehouse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Nerasta duomen≈≥</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
